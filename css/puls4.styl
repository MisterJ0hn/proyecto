gris_oscuro=#444
azul =#22BCE0
naranja=#DD4F24
gris_texto=#7A7A7A
@font-face {
	font-family: 'iconitos';
	src:url('../fonts/icomoon.eot?k7x92h');
	src:url('../fonts/icomoon.eot?#iefixk7x92h') format('embedded-opentype'),
		url('../fonts/icomoon.woff?k7x92h') format('woff'),
		url('../fonts/icomoon.ttf?k7x92h') format('truetype'),
		url('../fonts/icomoon.svg?k7x92h#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}
body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px
footer
	background naranja
	color rgba(white,0.5)
	text-align center
	padding 1em 0
	width 100%
	
	h3
		font-size 14px
		font-weight normal

		strong
			display block


		.mejor
			&:before
			&:after
				content "-"
header
	background gris_oscuro
	color white
	padding 0.5em
	position relative
	overflow hidden
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	z-index 1
	.logo
		border-right 1px solid azul
		width 60px
		img
			width 52px

	.titular
		margin 0 70px 0 70px
		.filtro
			color azul
			font-weight bold
			font-style italic
			font-size 14px
			text-decoration none
		.publicar
			background naranja
			color white
			float right
			margin -5px 1em 0 0
			padding 0.2em 0.5em
			font-style italic

			text-decoration none
			text-shadow 1px 1px 0px black
			&:before
				display inline-block
				font-family "iconitos"
				content  "\e600" 
				margin 0 3px 0 0
			
		.titulo
			font-size 18px
			font-wight normal
			margin 0
			padding 0
	.usuario
		position absolute
		top 10px
		right 10px
		.avatar
			margin 0 1.1em 0 0
			position relative
			z-index 1
			img 
				width 50px
				border-radius 50% 			

		.flechita
			background naranja
			color white
			display block
			position absolute
			padding 2px
			top 15px
			right 0
			text-align right
			width 2em
			z-index 0
			text-decoration none
			&:after
				display inline-block
				
				font-family "iconitos"
				content "\e602"
				text-shadow 2px 1px 0px black

nav
	background azul
	border-left 15px solid white
	position relative
	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		left 0
		
		position absolute
		top 0
		content ""
	.menu
		height 40px
		line-height 40px
		text-align left
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap
		li
			display inline-block
			a
				color white
				text-decoration none
				padding 0 0.2em
				display inline-block
				margin 0 0.5em

.posts
	padding 0.5em
	.post 
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		color gris_texto
		margin-bottom 1em
	.acciones
		border-top 3px solid azul
		padding 0.5em
		overflow hidden
		margin-left 0
		.datos
			float right
			.comentarios
				background gris_oscuro
				border-radius 3px
				color white
				margin 0 1em 0 0
				padding 2px 5px
				text-decoration none

			.estrellita
				text-decoration none
				&:after
					color #EEB
					font-family "iconitos"
					content "\e601"
					
		.votos
			float left
			.down
			.up
				text-decoration none
				font-size 1.5em
				vertical-align bottom

			.down
				color red
				&:before
					
					font-family "iconitos"
					content "\e602"
					

			.up 
				color green
				&:before
					
					font-family "iconitos"
					content "\e603"


	.descripcion
		color gris_texto
		height 164px
		.detalles
			
			margin-left 130px
			.autor
				margin 0.5em 0 2em 0
			.fecha
				float right
				margin 0
			.tag
				background azul
				border-radius 0.5em
				color white
				padding 0.2em 0.5em
				text-decoration none
			.titulo
				color gris_oscuro
				font-size 16px
				font-style italic
				margin 0
				padding 0.5em 0.5em 0 0
			

		.imagen
			float left
			img
				height 160px
				vertincal-align top
				width 120px
.left
	float left

.right 
	float right


@media screen and (min-width: 768px)
	header
		.titular
			.publicar
				position relative
				padding-left 3em
				&:before
					left 0px
					top -10px
					font-size 2.5em
					position absolute
	.posts
		.post
			display inline-block
			width 48%
			vertical-align top
			&:nth-child(odd) //Selecciona los elemenytos Impares. para los pares se utiliza even
				margin-right 2%